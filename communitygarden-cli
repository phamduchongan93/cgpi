#!/bin/bash
# Author: An Pham, Myriam
# Filename: communnity-garden.sh
# Version: testing 

## declaring modules function
clean () {
  apt-get clean
  apt-get autoclean -y
}

install_essential () {
  apt install python3-configobj python3-pil  python3-serial  python3-usb python3-pip
  # pacakges require for network wifi 
  apt install network-manager
}

sudo_check () {
   if [ "$EUID" -ne 0 ]
     then echo "Please run as root"
   exit
   fi
}

install_weewx_dependency () {
   sudo_check 
   apt install python3-cheetah \
   python3-configobj \
   python3-pil \
   python3-serial \
   python3-usb \
   python3-pip -y 
   pip3 install Cheetah3
}

install_weewx () {
  install_weewx_dependency 
  install_database
  download_weewx
  
}

enable_weewx () {
  cd /home/weewx
  cp util/systemd/weewx.service /etc/systemd/system
  systemctl enable weewx
  systemctl start weewx 
}

uninstall_weewx () {
  rm -r /home/weewx
  rm /etc/systemd/system/weewx.service
}


download_weewx () {
  local weewx_url='https://weewx.com/downloads/weewx-4.10.2.tar.gz'
  local weewx_dest='/var/temp/weewx/'

  mkdir -p "${weewx_dest}"
  echo "Downloading weewx file..." 
  wget -o "${weewx_dest}weex-4.10.2" "${weewx_url}"
  [ "$?" = 1 ] && echo "Failed to download weewx"  || echo "Fininshed Downloading weewx!"
  cd "${weewx_dest}weex-4.10.2"
  python3 ./setup.py build
  python3 ./setup.py install
  [ "$?" = 0] && echo "Success. The application has been installed at /home/weewx " || echo "Failed to install weewix"
}

wifi_check () {
  # check if wifi connection is available
  ping -q -c1 google.com &>/dev/null && echo online || echo offline
}



install_wifi_private () {
  local username=${1}
  local password=${2}

  cat  << EOF > /etc/wpa_supplicant/wpa_supplicant.conf
    network={
         ssid="eduroam"
         scan_ssid=1
         key_mgmt=WPA-EAP
         eap=PEAP
         identity="$username@cpp.edu"
         # anonymous_identity="*****@cpp.edu"
         password="$password"
         ca_cert="/usr/share/ca-certificates/eduroam.pem"
         phase1="peaplabel=auto peapver=auto"
         phase2="auth=MSCHAPV2"
    } 
EOF
  wpa_cli -i wlan0 -c /etc/wpa_supplicant/wpa_supplicant.conf
}

install_weewix () {
	  dowload
  apt-get update
}

install_database () {
  # Required if you are using MySQL (MariaDB):
  apt install mariadb-client python3-mysqldb
}


## Main ## 

main () {
  while [ -n "$1" ]
  do
     case "$1" in
       --install-dependency )
	 install_dependency
	 shift
	 ;;
       --install-weewx )
	 download_weewx 
	 shift
	 ;;

       --database-sql )
         install_database
	 shift
	 ;;

       --clean|-c )
         clean
	 shift
	 ;;
       --version | -v)
	 echo '1.0'
	 shift
	 ;;
       * | -*)
	 echo 'Invalid argument'
	 help
	 exit 1
	 break
	 ;;
     esac
  done
}


## 
help () {
  echo "Usuage: $(basename $0) <--install-dependency|-v>. First, edit the variable to match your bluetooth interface MAC  address. "
  echo ''
  echo 'Where:'
  echo '  --install-dependency 	        install dependency'
  echo ''
  echo 'Example:'
  echo "  $(basename $0) -v | --version   Check the version of the program "
}

main "$@"
